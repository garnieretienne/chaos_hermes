# NGiNX vhost generated by hermes

<%- if @opts[:upstream] -%>
upstream <%= @opts[:app_name] %> {
  <%- @opts[:upstream].each do |address| -%>
  server <%= address %>;
  <%- end -%>
}
<%- end -%>

server {
  server_name <%= @opts[:domain] %>;

  <%- if @opts[:upstream] -%>
  location / {
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://<%= @opts[:app_name] %>;
    break;
  }
  <%- end -%>
}